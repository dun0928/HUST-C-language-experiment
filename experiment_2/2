 #include<stdio.h>
 int main(){
     int a;
     scanf("%d",&a);
     int c=a;
     int count=0;
     int sum=0;
     int b;
     while(a>0){
         b=a%10;
         sum=sum+b;
         count++;
         a=a/10;
     }
     sum=sum+a;
     printf("%d是%d位数，且各位数字之和为%d。",c,count,sum);
     return 0;
 }
